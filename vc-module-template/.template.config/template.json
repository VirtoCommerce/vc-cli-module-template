{
  "$schema": "http://json.schemastore.org/template",
  "author": "VirtoWay",
  "classifications": [ "ecommerce", "platform", "virtocommerce", "virto", "commerce" ],
  "identity": "VirtoCommerce3.Module",
  "name": "Virto Commerce 3.x Module Template",
  "shortName": "vc-module",
  "guids": [
    "11111111-1111-1111-1111-111111111111",
    "22222222-2222-2222-2222-222222222222",
    "33333333-3333-3333-3333-333333333333",
    "44444444-4444-4444-4444-444444444444",
    "55555555-5555-5555-5555-555555555555",
    "66666666-6666-6666-6666-666666666666",
    "77777777-7777-7777-7777-777777777777",
    "88888888-8888-8888-8888-888888888888"
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "symbols": {
    "Author": {
      "type": "parameter",
      "dataType": "string",
      "description": "Your name",
      "defaultValue": "John Doe",
      "replaces": "{Author}"
    },
    "CompanyName": {
      "type": "parameter",
      "dataType": "string",
      "description": "Your company name",
      "defaultValue": "VirtoCommerce",
      "replaces": "{CompanyName}"
    },
    "ModuleName": {
      "type": "parameter",
      "dataType": "string",
      "description": "Your module name",
      "defaultValue": "newModule",
      "replaces": "{ModuleName}",
      "fileRename": "{ModuleName}"
    },
    "PlatformVersion": {
      "type": "parameter",
      "dataType": "string",
      "description": "Required Platform Version",
      "defaultValue": "3.200.0",
      "replaces": "{PlatformVersion}"
    },
    "PlatformNuGetPackageVersion": {
      "type": "parameter",
      "dataType": "string",
      "description": "Required Platform NuGet Package Version",
      "defaultValue": "3.200.0",
      "replaces": "{PlatformNuGetPackageVersion}"
    },
    "KebabModuleName": {
      "type": "derived",
      "valueSource": "ModuleName",
      "valueTransform": "kebab",
      "replaces": "{KebabModuleName}",
      "fileRename": "{KebabModuleName}"
    },
    "copyrightYear": {
      "type": "generated",
      "generator": "now",
      "parameters": {
        "format": "yyyy"
      },
      "replaces": "{Year}"
    },
    "joinedModuleTitle": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "CompanyName"
          },
          {
            "type": "ref",
            "value": "ModuleName"
          },
          {
            "type": "const",
            "value": "extension module"
          }
        ],
        "separator": " "
      },
      "replaces": "{ModuleTitle}"
    },
    "joinedNamespace": {
      "type": "generated",
      "generator": "join",
      "parameters": {
        "symbols": [
          {
            "type": "ref",
            "value": "CompanyName"
          },
          {
            "type": "ref",
            "value": "ModuleName"
          }
        ],
        "separator": "."
      },
      "fileRename": "{Namespace}",
      "replaces": "{Namespace}"
    }
  },
  "forms": {
    "kebab": {
      "identifier": "kebabCase"
    }
  }
}
