{
    "$schema": "http://json.schemastore.org/template",
    "author": "Maksim Kopnov",
    "classifications": [ "ecommerce", "platform", "virtocommerce", "virto", "commerce" ],
    "identity": "VirtoCommerce3.Module",
    "name": "Virto Commerce 3.x Module Template",
    "shortName": "vc-module",
    "tags": {
      "language": "C#",
      "type": "project"
    },
    "symbols":{
        "Author": {
            "type": "parameter",
            "dataType": "string",
            "description": "Your company name",
            "defaultValue": "John Doe",
            "replaces":"{Author}"
        },
        "CompanyName": {
            "type": "parameter",
            "dataType": "string",
            "description": "Your company name",
            "defaultValue": "VirtoCommerce",
            "replaces":"{CompanyName}"
        },
        "ModuleName": {
            "type": "parameter",
            "dataType": "string",
            "description": "Your module name",
            "defaultValue": "newModule",
            "replaces":"{ModuleName}",
            "fileRename": "{ModuleName}"
        },
        "PlatformVersion": {
            "type": "parameter",
            "dataType": "string",
            "description": "Required Platform Version",
            "defaultValue": "3.62.0",
            "replaces":"{PlatformVersion}"
        },
        "PlatformNuGetPackageVersion": {
            "type": "parameter",
            "dataType": "string",
            "description": "Required Platform NuGet Package Version",
            "defaultValue": "3.62.0",
            "replaces":"{PlatformNuGetPackageVersion}"
        },
        "copyrightYear": {
            "type": "generated",
            "generator": "now",
            "parameters": {
              "format": "yyyy"
            },
            "replaces": "{Year}"
        },
        "joinedJsModuleId": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                  {
                    "type": "ref",
                    "value": "ModuleName"
                  },
                  {
                    "type": "const",
                    "value": "Module"
                  }
                ],
                "separator": ""
            },
            "replaces":"{JsModuleId}"
        },
        "joinedModuleId": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                  {
                    "type": "ref",
                    "value": "ModuleName"
                  },
                  {
                    "type": "const",
                    "value": "Module"
                  }
                ],
                "separator": ""
            },
            "replaces":"{ModuleId}",
            "fileRename": "{ModuleId}"
        },
        "joinedModuleTitle": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                  {
                    "type": "ref",
                    "value": "CompanyName"
                  },
                  {
                    "type": "ref",
                    "value": "ModuleName"
                  },
                  {
                    "type": "const",
                    "value": "extension module"
                  }
                ],
                "separator": " "
            },
            "replaces":"{ModuleTitle}"
        },
        "joinedNamespace": {
            "type": "generated",
            "generator": "join",
            "parameters": {
                "symbols": [
                  {
                    "type": "ref",
                    "value": "CompanyName"
                  },
                  {
                    "type": "ref",
                    "value": "ModuleName"
                  }
                ],
                "separator": "."
            },
            "replaces":"{Namespace}",
            "fileRename": "{Namespace}"
        },
        "CoreProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "parameters": {
                "format":"B"
            },
            "replaces":"{CoreProjectGuid}"
        },
        "DataProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "parameters": {
                "format":"B"
            },
            "replaces":"{DataProjectGuid}"
        },
        "TestsProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "parameters": {
                "format":"B"
            },
            "replaces":"{TestsProjectGuid}"
        },
        "WebProjectGuid": {
            "type": "generated",
            "generator": "guid",
            "parameters": {
                "format":"B"
            },
            "replaces":"{WebProjectGuid}"
        },
        "SolutionGuid": {
            "type": "generated",
            "generator": "guid",
            "parameters": {
                "format":"B"
            },
            "replaces":"{SolutionGuid}"
        }
    }
}
